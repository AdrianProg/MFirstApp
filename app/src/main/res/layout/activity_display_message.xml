<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pa.adrian.mfirstapp.DisplayMessageActivity"
    android:id="@+id/activity_display_message"
    android:orientation="vertical"
    android:padding="@dimen/paddingPrincipal"
    android:background="@drawable/imagenfondotrabajoandroiddam">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tituloActivity2"
        android:textSize="@dimen/tamañoTituloActivity2"
        android:textAlignment="center"
        android:textColor="@color/colorTituloActivity2"
        />

    <TextView
        android:id="@+id/tvMensajeRecibido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textoDefault"
        android:textSize="@dimen/tamañoMensajeRecibido"
        android:layout_marginTop="@dimen/margenTopMensajeRecibido"
        android:layout_marginLeft="@dimen/margenRightYLeftMensajeRecibido"
        android:layout_marginRight="@dimen/margenRightYLeftMensajeRecibido"
        android:textColor="@color/colorIntroducirTexto"
        />

</LinearLayout>