<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pa.adrian.mfirstapp.DisplayMessageActivity"
    android:id="@+id/activity_display_message"
    android:orientation="vertical"
    android:padding="@dimen/paddingPrincipal"
    android:background="@drawable/marcianito"
    >

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tituloActivity2"
        android:textSize="@dimen/tamañoTituloActivity2"
        android:textAlignment="center"
        android:textColor="@color/colorTituloActivity2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margenTopMensajeRecibido"
        android:layout_marginLeft="@dimen/margenRightYLeftMensajeRecibido"
        android:layout_marginRight="@dimen/margenRightYLeftMensajeRecibido"
        >

    <TextView
        android:id="@+id/tvMensajeNombre"
        android:layout_width="@dimen/tamañoEditTextLand"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tamañoMensajeRecibido"
        android:textColor="@color/colorHint"
        android:layout_marginRight="@dimen/margenRightYLeftMensajeRecibido"
        />

    <TextView
        android:id="@+id/tvMensajeApellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tamañoMensajeRecibido"
        android:layout_marginRight="@dimen/margenDerechoMensaje"
        android:textColor="@color/colorHint"
        />

        <TextView
            android:id="@+id/tvMensajeFecha"
            android:layout_width="@dimen/tamañoEditTextLand"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tamañoMensajeRecibido"
            android:textColor="@color/colorHint"
            />

    </LinearLayout>

</LinearLayout>